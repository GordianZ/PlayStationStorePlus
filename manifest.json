{
  "name": "PlayStation Store Plus",
  "description": "Better download list.",
  "version": "1.6",
  "author": "Gordian Zhang",
  "permissions": [
		"tabs",
    "storage",
		"https://store.playstation.com/*"
  ],
  "browser_action": {
    "default_title": "PlayStation Store Plus",
    "default_icon": "icon-128.png"
  },
  "background": {
	"scripts": ["background.js"],
	"persistent": false
  },
  "icons" : {
    "48" : "icon-48.png",
    "128" : "icon-128.png"
  },
  "manifest_version": 2
}
